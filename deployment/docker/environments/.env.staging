# Staging Environment Configuration
# 스테이징 환경용 설정

# API 설정
REACT_APP_API_URL=http://your-staging-server:8000
REACT_APP_ENV=staging

# 데이터베이스 설정
DATABASE_URL=postgresql+asyncpg://wkms:secure_staging_password@postgres:5432/wkms_staging
DB_HOST=postgres
DB_USER=wkms
DB_PASSWORD=secure_staging_password
DB_NAME=wkms_staging
DB_PORT=5432

# Redis 설정
REDIS_URL=redis://redis:6379

# AI 서비스 설정 (스테이징용)
DEFAULT_LLM_PROVIDER=azure_openai
AZURE_OPENAI_API_KEY=your-staging-api-key
AZURE_OPENAI_ENDPOINT=https://your-staging-openai.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# 또는 Bedrock 사용 시
# DEFAULT_LLM_PROVIDER=bedrock
# BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20240620-v1:0
# BEDROCK_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-staging-access-key
# AWS_SECRET_ACCESS_KEY=your-staging-secret-key

# 스테이징 모드 설정
DEBUG=false
LOG_LEVEL=INFO
RELOAD=false

# 보안 설정 (스테이징용)
SECRET_KEY=staging-secret-key-should-be-secure
CORS_ORIGINS=http://your-staging-server:3000,https://your-staging-domain.com

# 파일 업로드 설정
MAX_FILE_SIZE=104857600  # 100MB
UPLOAD_PATH=./uploads

# 세션 설정
SESSION_TIMEOUT=7200  # 2시간

# 모니터링 설정
ENABLE_METRICS=true
METRICS_PORT=9090