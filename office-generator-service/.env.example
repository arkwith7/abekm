# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Security
API_KEY=your-secret-api-key-here
CORS_ORIGIN=http://localhost:8000,http://localhost:3000
MAX_REQUEST_SIZE=10mb

# File Generation
OUTPUT_DIR=/tmp/office-output
MAX_SLIDES=60
MAX_BULLETS_PER_SLIDE=10
FILE_RETENTION_SECONDS=300

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Features (for future expansion)
ENABLE_PPTX=true
ENABLE_DOCX=false
ENABLE_XLSX=false

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
